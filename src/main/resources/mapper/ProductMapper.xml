<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.henu.dao.ProductMapper">

    <resultMap id="BaseResultMap" type="cn.edu.henu.bean.Product">
        <id property="id" column="id"/>
        <result property="productName" column="name"/>
        <result property="productIntr" column="introduce"/>
        <result property="productPrice" column="price"/>
        <result property="photosrc" column="src"/>
        <result property="productGrade" column="grade"/>
    </resultMap>

    <resultMap id="AssociationResultMap" type="cn.edu.henu.bean.Product">
        <id property="id" column="id"/>
        <result property="productName" column="name"/>
        <result property="productIntr" column="introduce"/>
        <result property="productPrice" column="price"/>
        <result property="photosrc" column="src"/>
        <result property="productGrade" column="grade"/>
        <association property="business" javaType="cn.edu.henu.bean.Business">
            <id property="username" column="username"/>
            <result property="rname" column="rname"/>
            <result property="wname" column="wname"/>
        </association>
    </resultMap>

    <!--查询所有商品信息 包含商家信息-->
    <select id="selectAll" resultMap="AssociationResultMap">
        select p.*,b.username,b.wname,r.name
        from productinfo p,bus_proinfo bp,businessinfo b,restaurantinfo r
        where p.id = bp.pid and bp.bid = b.username and b.rid = r.id
    </select>

    <!--
        条件查询
            商品名字或者店铺名字
        selectByCondition
    -->
    <select id="selectByCondition" resultMap="AssociationResultMap">
        select p.*,b.username,b.wname,r.name
        from productinfo p,bus_proinfo bp,businessinfo b,restaurantinfo r
        where p.id = bp.pid and bp.bid = b.username and b.rid = r.id
        <if test="name != null">
            and p.name = #{name}
        </if>
        <if test="price != null">
            and p.price >= #{price}
        </if>
        <if test="grade != null">
            and p.grade >= #{grade}
        </if>
    </select>

    <!--
        根据商家id获取商品信息
        getAllByBid
    -->
    <select id="getAllByBid" resultMap="BaseResultMap">
        select p.*
        from productinfo p,bus_proinfo bp,businessinfo b
        where b.username=#{bid} and b.username= bp.bid and bp.pid = p.id
    </select>

    <!--
        查询数据总量
        selectTotal
    -->
    <select id="selectTotal" resultType="Integer">
        select count(id) from productinfo p where 1 =1
        <if test="name != null">
            and p.name = #{name}
        </if>
        <if test="price != null">
            and p.price >= #{price}
        </if>
        <if test="grade != null">
            and p.grade >= #{grade}
        </if>
    </select>

    <!--
        添加商品
        insert
    -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="product.id" parameterType="cn.edu.henu.bean.Product">
        insert into productinfo(name,introduce,price,src,grade)
        values(#{product.productName},#{product.productIntr},#{product.productPrice},#{product.photosrc},-1)
    </insert>

</mapper>